                    <h2>Filters</h2>
                    <div class="filterGroupSection">
                        <div class="filterGroup">
                            <div>

                                <label> TimeZone </label>

                                @(Html.Kendo().DropDownList()
                                  .Name("id")
                                  .HtmlAttributes(new { style = "width:250px" })
                                  .OptionLabel("Select Geo...")
                                  .DataTextField("Name")
                                  .DataValueField("Id")
                                  .DataSource(source => source.Read(read => read.Action("GetCascadeCategories", "DistiGrid")))
                                )


                                <label> Area </label>
                                @(Html.Kendo().DropDownList()
                                  .Name("areaId")
                                  .HtmlAttributes(new { style = "width:250px" })
                                  .OptionLabel("Select Area...")
                                  .DataTextField("Name")
                                  .DataValueField("Id")
                                  .DataSource(source => source.Read(read => read.Action("GetAreaByGeo", "DistiGrid")
                                      .Data("filterArea"))
                                      .ServerFiltering(true))
                                  .Enable(false)
                                  .AutoBind(false)
                                  .CascadeFrom("id")
                                )
                                <script>
                                    function filterArea() {
                                        return {
                                            Id: $("#id").val()
                                        };
                                    }
                                </script>

                                <label> Subsidiary </label>
                                @(Html.Kendo().DropDownList()
                                  .Name("subsidiaryId")
                                  .HtmlAttributes(new { style = "width:250px" })
                                  .OptionLabel("Select Subsdiary...")
                                  .DataTextField("Name")
                                  .DataValueField("Id")
                                  .DataSource(source => source.Read(read => read.Action("GetSubsdiaryByArea", "DistiGrid")
                                      .Data("filterSubsidiary"))
                                      .ServerFiltering(true))
                                  .Enable(false)
                                  .AutoBind(false)
                                  .CascadeFrom("areaId")
                                )
                                <script>
                                    function filterSubsidiary() {
                                        return {
                                            areaId: $("#areaId").val()
                                        };
                                    }
                                </script>

                            </div>
                        </div>
                    </div>
